{
  "name": "eventstack-helper",
  "displayName": "EventStack Helper",
  "description": "VSCode extension that helps to add eventStack tracking codes to function declarations in JavaScript, TypeScript, and Vue files",
  "version": "1.0.0",
  "publisher": "qjsrodksro",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:vue",
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "javascript"
      },
      {
        "id": "typescript"
      },
      {
        "id": "vue"
      }
    ],
    "configuration": {
      "title": "EventStack Helper",
      "properties": {
        "eventstack-helper.autoAddEventStack": {
          "type": "boolean",
          "default": true,
          "description": "whether to automatically add eventStack when saving files"
        },
        "eventstack-helper.allowedFilePatterns": {
          "type": "array",
          "default": [
            "**/*.js",
            "**/*.ts",
            "**/*.vue"
          ],
          "description": "Automatically add eventStack to files matching these patterns"
        },
        "eventstack-helper.eventStackFunctionName": {
          "type": "string",
          "default": "window.eventStack.set",
          "description": "name of the eventStack function"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "rm -rf ./out && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.28.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "sinon": "^21.0.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@babel/parser": "^7.28.0",
    "@babel/traverse": "^7.28.0",
    "@vue/compiler-sfc": "^3.5.18",
    "minimatch": "^10.1.1"
  },
  "license": "MIT",
  "repository": "github:mochang2/eventstack-helper"
}
