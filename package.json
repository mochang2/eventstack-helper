{
  "name": "eventstack-helper",
  "displayName": "EventStack Helper",
  "description": "VSCode extension that helps to add(The word insert seems to be dictionary correct, but I'll use add) eventStack tracking codes to function declarations in JavaScript, TypeScript, and Vue files",
  "version": "1.1.0",
  "publisher": "qjsrodksro",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:vue",
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "javascript"
      },
      {
        "id": "typescript"
      },
      {
        "id": "vue"
      }
    ],
    "commands": [
      {
        "command": "eventstack-helper.manualAddEventStack",
        "title": "Add EventStack Manually",
        "category": "EventStack Helper"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "eventstack-helper.manualAddEventStack",
          "when": "editorTextFocus && (resourceExtname == '.js' || resourceExtname == '.ts' || resourceExtname == '.vue')",
          "group": "navigation@9"
        }
      ]
    },
    "keybindings": [
      {
        "command": "eventstack-helper.manualAddEventStack",
        "key": "ctrl+shift+e ctrl+shift+s",
        "mac": "cmd+shift+e cmd+shift+s",
        "when": "editorTextFocus && (resourceExtname == '.js' || resourceExtname == '.ts' || resourceExtname == '.vue')"
      }
    ],
    "configuration": {
      "title": "EventStack Helper",
      "properties": {
        "eventstack-helper.autoAddEventStack": {
          "type": "boolean",
          "default": true,
          "description": "whether to automatically add eventStack when saving files"
        },
        "eventstack-helper.allowedFilePatterns": {
          "type": "array",
          "default": [
            "**/*.js",
            "**/*.ts",
            "**/*.vue"
          ],
          "description": "Automatically add eventStack to files matching these patterns"
        },
        "eventstack-helper.eventStackFunctionName": {
          "type": "string",
          "default": "window.eventStack.set",
          "description": "name of the eventStack function"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack --mode production",
    "compile:test": "tsc --project tsconfig.test.json",
    "watch": "webpack --mode development --watch",
    "pretest": "rm -rf ./out && npm run compile && npm run compile:test && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.28.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "sinon": "^21.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.8.3",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@babel/parser": "^7.28.0",
    "@babel/traverse": "^7.28.0",
    "@vue/compiler-sfc": "^3.5.18",
    "minimatch": "^10.1.1"
  },
  "license": "MIT",
  "repository": "github:mochang2/eventstack-helper"
}
